<!-- /snippets/social-sharing.liquid -->
{% assign shareButtonStyle = settings.social_sharing_style %}

<div class="social-sharing {{ shareButtonStyle }}">

  {% if settings.share_facebook %}
    <a href="#" onClick='window.open("//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}", "FBWindow", "width=600,height=400"); return false;' class="share-facebook" title="{{ 'general.social.alt_text.share_on_facebook' | t }}">
      <span class="icon icon-facebook" aria-hidden="true"></span>
      <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_facebook' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_facebook' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a href="#" onClick='window.open("//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: "1024x1024" }}&amp;description={{ share_title | url_param_escape }}", "PINWindow", "width=900,height=700"); return false;' class="share-pinterest" title="{{ 'general.social.alt_text.share_on_pinterest' | t }}">
      <span class="icon icon-pinterest2" aria-hidden="true"></span>
      <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_pinterest' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_pinterest' | t }}</span>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a href="#" onClick='window.open("//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}", "TWWindow", "width=600,height=400"); return false;' class="share-twitter" title="{{ 'general.social.alt_text.share_on_twitter' | t }}">
      <span class="icon icon-twitter" aria-hidden="true"></span>
      <span class="share-title" aria-hidden="true">{{ 'general.social.share_on_twitter' | t }}</span>
      <span class="visually-hidden">{{ 'general.social.alt_text.share_on_twitter' | t }}</span>
    </a>
  {% endif %}

</div>
